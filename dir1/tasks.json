{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build myshell",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o",
                "myshell",
                "myshell.c"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run myshell",
            "type": "shell",
            "command": "./myshell",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}